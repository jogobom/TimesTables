<Window x:Class="TimesTables.BaseNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BaseNumber" Height="194" Width="280" ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=BaseNumberBox}">
    <Grid Margin="0,0,23,16">
        <TextBlock Margin="28,12,0,0" TextWrapping="Wrap" Height="22" VerticalAlignment="Top" HorizontalAlignment="Center" Width="112"><Run Text="Number to use:"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="BaseNumberBox" Height="24" Margin="28,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" Width="114" Text="2" GotKeyboardFocus="BaseNumberBox_GotKeyboardFocus"/>
        <Button Content="Close" Margin="29,82,0,0" VerticalAlignment="Top" Height="20" HorizontalAlignment="Center" Width="115" Click="Button_Click"/>
    </Grid>
</Window>
